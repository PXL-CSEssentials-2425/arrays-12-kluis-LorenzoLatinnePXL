<Window x:Class="Kluis.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Kluis"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Background="Gray" KeyDown="Numpad_KeyDown">
    <Grid Loaded="Grid_Loaded">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Column="0">
            <Button x:Name="buttonSeven" Height="50" Width="50" Margin="25" Click="numberButton_Click" Content="7"></Button>
            <Button x:Name="buttonFour" Height="50" Width="50" Margin="25" Click="numberButton_Click" Content="4"></Button>
            <Button x:Name="buttonOne" Height="50" Width="50" Margin="25" Click="numberButton_Click" Content="1"></Button>
            <Label x:Name="randomCodeLabel" Height="50" Margin="25" Width="150" BorderBrush="Black" 
                   BorderThickness="1px" Foreground="White" 
                   HorizontalContentAlignment="Center" VerticalContentAlignment="Center">
            </Label>
        </StackPanel>
        <StackPanel Grid.Column="1">
            <Button x:Name="buttonEight" Height="50" Width="50" Margin="25" Click="numberButton_Click" Content="8"></Button>
            <Button x:Name="buttonFive" Height="50" Width="50" Margin="25" Click="numberButton_Click" Content="5"></Button>
            <Button x:Name="buttonTwo" Height="50" Width="50" Margin="25" Click="numberButton_Click" Content="2"></Button>
            <Button x:Name="buttonZero" Height="50" Width="50" Margin="25" Click="numberButton_Click" Content="0"></Button>
        </StackPanel>
        <StackPanel Grid.Column="2">
            <Button x:Name="buttonNine" Height="50" Width="50" Margin="25" Click="numberButton_Click" Content="9"></Button>
            <Button x:Name="buttonSix" Height="50" Width="50" Margin="25" Click="numberButton_Click" Content="6"></Button>
            <Button x:Name="buttonThree" Height="50" Width="50" Margin="25" Click="numberButton_Click" Content="3"></Button>
            <!--<Label x:Name="inputLabel" Height="50" Width="150" BorderBrush="Black" BorderThickness="1px" 
                   HorizontalContentAlignment="Center" VerticalContentAlignment="Center"></Label>-->
        </StackPanel>
    </Grid>
</Window>
